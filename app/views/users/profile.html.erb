
<div class="profile_container">
	<div class="profile_top col-lg-12">

		<div class="profile_image col-sm-6 col-md-6 col-lg-6 clearfix:after">
			<img src="<%= @current_user.picture %>?type=large"/>
		</div>

		<div class="description_container">
			<div class="profile_description well col-lg-6 col-md-6 col-sm-6">
				<h2><%= @current_user.name %></h2>
				<p><%= @current_user.about %></p>
				<a class="btn btn-primary description_btn" data-toggle="modal" href='#about'>Update Description</a>
			</div>
		</div>
		
		<div class="modal fade" id="about">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		        <h4 class="modal-title">About Form</h4>
		      </div>
		      <div class="modal-body">
		  
		      <%= render 'users/form' %>

		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		      </div>
		    </div>
		  </div>
		</div>

	</div>

	<div class="profile_bottom col-sm-12">

		<div class="favs well col-lg-6 col-md-6 col-sm-6 col-xs-12">
			<h1 class="favs_title">Favorite Location</h1>
			<ul class="col-sm-12">
				<li class="list_favs"> <%= @current_user.favorite %> </li>
			</ul>
			<a class="btn btn-primary favorite_btn" data-toggle="modal" href='#favorite_locations'>Update Favorite Locations</a>
			<div class="modal fade" id="favorite_locations">
			  <div class="modal-dialog">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			        <h4 class="modal-title">Favorite Locations Form</h4>
			      </div>
			      <div class="modal-body">
			  
			      <%= render 'users/form_favorite_locations' %>

			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>				        
			      </div>
			    </div>
			  </div>
			</div>
		</div>
	</div>
</div>